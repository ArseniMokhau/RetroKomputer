<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/InformationButtonAdvanced"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="Information"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#800080"
        android:radius="36dp" />

    <Button
        android:id="@+id/StartButtonAdvanced"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="Start"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/DumpButtonAdvanced"
        app:layout_constraintStart_toEndOf="@+id/InformationButtonAdvanced"
        android:backgroundTint="#800080"
        android:radius="36dp" />

    <Button
        android:id="@+id/DumpButtonAdvanced"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="Dump Memory"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#800080"
        android:radius="36dp"/>

    <ScrollView
        android:id="@+id/outputScrollView"
        android:layout_width="346dp"
        android:layout_height="593dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/StartButtonAdvanced"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/outputWindowAdvanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="Result"
            android:textSize="20sp" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>