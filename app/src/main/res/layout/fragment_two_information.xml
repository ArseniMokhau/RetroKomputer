<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- CardView for styling -->
    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="357dp"
        android:layout_height="599dp"
        android:lineSpacingExtra="4dp"
        android:text="

Our emulator is designed to replicate the behavior of the MOS 6502 processor, allowing users to explore and understand the intricacies of this historic microprocessor. It provides a platform for enthusiasts, students, and developers to experiment with assembly language programming and gain insights into the fundamentals of early computing."
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
