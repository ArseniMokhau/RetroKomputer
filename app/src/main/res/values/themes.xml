<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RetroKomputer_Front" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RetroKomputer_Front.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="TealBottomNavigation2Style" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/tealColor</item>
        <item name="itemBackground">@color/tealColor</item>
    </style>





    <style name="TealBottomNavigationStyle3" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/tealColor</item>
        <item name="itemBackground">@color/tealColor</item>
        <item name="itemIconTint">@color/whiteTextColor</item>
        <item name="itemTextColor">@color/whiteTextColor</item>
    </style>


    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/purple_500</item>
        <item name="itemTextColor">@color/white</item>
    </style>





    <style name="Theme.RetroKomputer_Front.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RetroKomputer_Front.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>